<%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.13.3/jquery.tablesorter.min.js" %>

<h2>In-store Offers</h2>

<br/>

<div class="col-lg-12">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-usd"></i> Active In-store Offers</h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table id="offers-table" class="table table-striped table-bordered table-hover tablesorter">
          <thead>
            <tr class="success">
              <th>Offer <i class="fa fa-sort"></i></th>
              <th>Discount (percentage)</th>
              <th>Trigger (time spent in sec.)</th>
            </tr>
          </thead>
          <tbody>
          <% Offer.each do |offer| %>
            <tr>
              <td><%= offer.product %></td>
              <td><%= offer.discount %></td>
              <td><%= offer.trigger %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-right">
        <b><a href="/offers/new">Add New Offer <i class="fa fa-plus"></i></a></b>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function() 
    { 
        $("#offers-table").tablesorter(); 
    } 
); 
</script>
