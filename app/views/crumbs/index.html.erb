<%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.13.3/jquery.tablesorter.min.js" %>

<h2>Consumer Activity</h2>

<br/>

<div class="col-lg-12">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-barcode"></i> Consumer In-store Activity: Today</h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table id="consumer-activity-table" class="table table-striped table-bordered table-hover tablesorter">
          <thead>
            <tr class="success">
              <th>Consumer ID <i class="fa fa-sort"></i></th>
              <% @store.beacons.each do |beacon| %>
                <th><%= beacon.name %> <br> <small> (time spent in sec.) <i class="fa fa-sort"></i> </small></th>
              <% end %>
          </thead>
          <tbody>
          <% @consumer_activity.each do |consumer_id, activity| %>
            <tr>
              <td><%= consumer_id %></td>
              <% @store.beacons.each do |beacon| %>
                <td align="center"><%= activity[beacon.id] %></td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-right">
        <b><a href="/crumbs">Refresh <i class="fa fa-refresh"></i></a></b>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function() 
    { 
        $("#consumer-activity-table").tablesorter(); 
    } 
); 
</script>
